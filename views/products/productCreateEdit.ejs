<%- include('../parcials/head.ejs') %>
<link rel="stylesheet" href="/css/productCreate.css">
<body>
	<%- include('../parcials/header.ejs') %>

	<main>
		<section class="main-contenedor">
			<div class="titulo"><h1>Subi tu producto</h1></div>
                <div class="division-ppal">
                    <div class="formulario-columna">
                    <form action="/" method="GET" class="main-formulario"> 
                        <div class="etiqueta-formulario">
                            <label for="product-name">Nombre de producto</label>
                            <input type="text" name="product-name" id="product-name">
                        </div>
                        <div class="etiqueta-formulario">
                            <label for="price">Precio</label>
                            <input type="number" name="price" id="price">
                        </div>

                        <div class="etiqueta-formulario">
                            <label for="user">Categoria</label>
                            <input type="email" name="email" id="user">
                        </div>
                        <div class="etiqueta-formulario">
                            <label for="password">Imagen</label>
                            <input type="password" name="clave" id="password">
                        </div>
                        <div class="etiqueta-formulario">
                            <label for="confirm-password">Descripcion</label>
                            <input class="descripcion" type="textarea" name="clave" id="confirm-password">
                        </div>

                        <div class="botones">
                            <button type="submit" class="boton">
                                Crear producto
                            </button>
                            <button type="reset" class="boton">
                                Borrar
                            </button>
                        </div>
                    </form>
                    </div>
                    <div class="imagen">
                        <img src="/img/productCreate/woocom-pro1.png" alt="">
                    </div>
                </div>
		</section>
	</main>

	<%- include('../parcials/footer.ejs') %>

</html>
