<%- include('../parcials/head.ejs') %>

<link rel="stylesheet" href="/css/register.css">

<body>
	<%- include('../parcials/header.ejs') %>

	<main>
		<section class="main-contenedor">
			<div><h1>Registrate</h1></div>
			<form action="/user/register" method="POST" class="main-formulario" enctype="multipart/form-data"> 
				<% if(locals.errors){ 
					 errors.forEach(error => { %>
					<p><%= error.msg  %> </p>
				<% })
				}
				%> 
				
				<div class="formulario">
					<div class="nombre-y-apellido">
						<div class="etiqueta-formulario3">
							<label for="name">Nombre</label>
							<input type="text" name="nombre" class="nombree" id="name" value="<%= locals.old && old.nombre ? old.nombre : ''%>">
							<span class="msg-error msg-error-nombre"></span>
						</div>
						<div class="etiqueta-formulario2">
							<label for="last-name">Apellido</label>
							<input type="text" name="apellido" class="apellidoo" id="last-name">
							<span class="msg-error msg-error-apellido"></span>
						</div>
					</div>

					<div class="etiqueta-formulario">
						<label for="user">Email</label>
						<input type="text" name="email" class="emaill" id="user">
						<span class="msg-error msg-error-email"></span>
					</div>
					<div class="etiqueta-formulario">
						<label for="password">Contraseña</label>
						<input type="password" name="clave" class="passwordd" id="password">
						<span class="msg-error msg-error-password"></span>
					</div>
					<div class="etiqueta-formulario">
						<label for="confirm-password">Confirmar Contraseña</label>
						<input type="password" name="re-clave" class="password2" id="confirm-password">
						<span class="msg-error msg-error-password2"></span>
					</div>

					<div class="etiqueta-formulario">
						<label for="profilePic">Imagen de perfil</label>
						<input type="file" name="profilePic" class="profilePic" id="profilePic">
						<span class="msg-error msg-error-profilePic"></span>
					</div>

					<div class="etiqueta-formulario">
						<button type="submit" class="boton">
							Registrate
						</button>
						<button type="reset" class="boton">
							Borrar
						</button>
					</div>
				</div>
			</form>

		</section>
		<script src="/js/userValidation.js"></script>
	</main>

	<%- include('../parcials/footer.ejs') %>

</html>
